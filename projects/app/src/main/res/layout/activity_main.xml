<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/sportLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
        android:layout_marginTop="15dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hockey"
                android:layout_marginLeft="15dp"
                android:id="@+id/checkBoxHockey">
            </CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tennis"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/checkBoxHockey"
                android:id="@+id/checkBoxTennis"
                android:checked="true">
            </CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basketball"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/checkBoxTennis"
                android:id="@+id/checkBoxBasketball">
            </CheckBox>

            <!-- we use dp because that is relative to each device -->
            <!-- we put @+id/ before the id because that adds it to the R library -->

    </RelativeLayout>

</RelativeLayout>